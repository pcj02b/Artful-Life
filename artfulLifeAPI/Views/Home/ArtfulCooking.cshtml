<section ng-controller="cookingCtrl">
    <aside>
        <ul>
            <li ng-show="showPrep" ng-click="showPrep = false" class="title">Prep Instructions</li>
            <li ng-hide="showPrep" ng-click="showPrep = true" class="title">Cooking Instructions</li>
            <li ng-repeat="recipe in recipes">
                <span ng-show="recipe.included">
                    {{recipe.name}}
                    x
                    {{recipe.multiplier}}
                </span>
            </li>
        </ul>
    </aside>
    <article>
        <h4>Cooking Instructions</h4>
        <p><b>The Idea: </b>Prepare the recipes you've shopped for or cook the meals that are ready to go in your freezer. Click the title on the left to switch between preparation and cooking instructions.</p>
        <div ng-repeat="recipe in recipes">
            <table class="recipe" ng-show="recipe.included">
                <tr>
                    <th colspan="2">
                        {{recipe.name}}
                    </th>
                </tr>
                <tr>
                    <td>
                        <p>Ingredients:</p>
                        <ul id="ingredient">
                            <li ng-repeat="n in recipe.ingredients">
                                <span>{{n.count[0]}}</span>
                                <span ng-hide="n.count[1]==0"> {{n.count[1]}}/{{n.count[2]}}</span>
                                <span>{{n.unit}}</span>
                                <span> </span>
                                <span>{{n.name}}</span>
                            </li>
                        </ul>
                    </td>
                    <td>
                        <p>Cooking Instructions:</p>
                        <ol>
                            <li ng-repeat="step in recipe.steps">
                                {{step}}
                            </li>
                        </ol>
                    </td>
                </tr>
            </table>
        </div>
    </article>
</section>
