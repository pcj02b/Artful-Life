<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="google-signin-scope" content="profile email">
    <meta name="google-signin-client_id" content="506181225958-26l6op1db691tehseq6qfp11eetjkoa5.apps.googleusercontent.com" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Josefin+Slab" />
    <link rel='stylesheet' type='text/css' href='http://fonts.googleapis.com/css?family=Waiting+for+the+Sunrise'>
    <link rel="stylesheet" href="../Content/navBar.css" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="../Scripts/navBar.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
    <script src="../Scripts/recipeApp.js"></script>
    <script src="../Scripts/headerController.js"></script>
    <script src="../Scripts/recipeController.js"></script>
    <script src="../Scripts/storeController.js"></script>
    <script src="../Scripts/cookingController.js"></script>
    <script src="../Scripts/googleSignIn.js"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script> @*google signin*@
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="recipeApp">
    <header ng-controller="headerCtrl">
        <h1>@ViewBag.Title</h1>
        <h2>@ViewBag.Title2</h2>
        <h2>@ViewBag.Title3</h2>
        <h2>@ViewBag.Title4</h2>
    </header>
    <nav>
        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Artful Recipes", "ArtfulRecipes", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Artful Shopper", "ArtfulShopper", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Artful Cooking", "ArtfulCooking", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Artful & Resourceful", "ArtfulResourceful", "Home", new { area = "" }, null)</li>
            <li>@Html.ActionLink("Tips and Advise", "TipsAndAdvise", "Home", new { area = "" }, null)</li>
            <li>
                <div id="logIn" class="g-signin2" data-onsuccess="onSignIn" style="float:none"></div>
                <div id="logOut"><a href="/" onclick="signOut()">Sign out</a></div>
            </li>
            @*<li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>*@
        </ul>
    </nav>
    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
